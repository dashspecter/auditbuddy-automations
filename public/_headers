# Prevent caching of HTML documents on ALL SPA routes.
# (Some hosts apply caching based on the request path, e.g. /auth, /dashboard,
# even though they serve /index.html internally.)
/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# build-manifest/bootstrap must never be cached
/build-manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/build-bootstrap.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# version.json must never be cached
/version.json
  Cache-Control: no-cache, no-store, must-revalidate

# Allow caching for hashed static assets (JS, CSS)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
