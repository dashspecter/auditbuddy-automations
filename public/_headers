# Prevent caching of HTML documents on ALL SPA routes.
# This is critical for preventing stale UI issues.
/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# build-manifest/bootstrap/version must never be cached
/build-manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/build-bootstrap.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/build-bootstrap-v2.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/build-bootstrap-v3.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# version.json is critical for cache busting - NEVER cache
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# PWA manifest should not be aggressively cached
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Allow long-term caching for hashed static assets (JS, CSS)
# These are safe because filenames change with content
/assets/*
  Cache-Control: public, max-age=31536000, immutable
